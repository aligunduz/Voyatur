@model DataAccessLayer.entities.YachtRenting
@{ 
    DataAccessLayer.entities.Users user = (DataAccessLayer.entities.Users)Session["user"];
}
@{
    ViewBag.Title = "YachtRent";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>



    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <p><img src="~/images/@Model.Ship.img.Where(c=>c.IsMain).FirstOrDefault().FilePath" alt="Image" class="img-fluid"></p>
                </div>
                <div class="col-md-5">
                    <span class="text-serif text-primary">@Model.Ship.Name</span>
                    <h3 class="heading-92913 text-black">Yat Kiralama</h3>
                    @using (Html.BeginForm("YachtRent","Sales",FormMethod.Post,new {  @class = "row"  }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group col-md-6">
                            <label for="input-1">İsim:</label>
                            <input class="form-control text-box single-line" disabled id="input-1" name="Name" type="text" value="@user.Name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="input-2">Soyisim:</label>
                            <input class="form-control text-box single-line" disabled id="input-1" name="Surname" type="text" value="@user.Surname">
                        </div>

                <div class="form-group col-md-6">
                    <label for="input-3">Date From:</label>
                    <input autocomplete="off" class="form-control text-box single-line" data-val="true" data-val-date="The field StartDate must be a date." data-val-required="The StartDate field is required." id="startdate" name="StartDate" type="datetime">
                    @*@Html.EditorFor(Model => Model.StartDate, new { htmlAttributes = new { @class = "form-control", id = "startdate", autocomplete = "off" } })*@
                </div>
                <div class="form-group col-md-6">
                    <label for="input-4">Date To:</label>
                    <input autocomplete="off" class="form-control text-box single-line" data-val="true" data-val-date="The field StartDate must be a date." data-val-required="The StartDate field is required." id="enddate" name="EndDate" type="datetime">
                    @*@Html.EditorFor(Model=>Model.EndDate, new { htmlAttributes = new { @class = "form-control", id = "enddate", autocomplete = "off" } })*@
                </div>

                        <div class="form-group col-md-12">
                            <label for="input-5">Yacht You're Interested in:</label>
                            <select name="" id="input-5" class="form-control">
                                <option value="">Motor Yacht</option>
                                <option value="">Hi-Speed Yacht</option>
                                <option value="">Premium Yacht</option>
                                <option value="">Presidential Yacht</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="input-6">Email Address</label>
                            <input type="text" class="form-control" id="input-6" value="@user.EMail" name="Email">
                        </div>

                        <div class="form-group col-md-6">
                            <label for="input-7">Phone Number</label>
                            <input type="text" class="form-control" id="input-7" name="Phone">
                        </div>



                        <div class="form-group col-md-12">
                            <label for="input-8">Notes</label>
                            <textarea name="Note" id="input-8" cols="30" rows="5" class="form-control"></textarea>
                        </div>

                        <div class="form-group col-md-12">
                            <input type="submit" class="btn btn-primary py-3 px-5" value="Book Now">
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    
    $(function () {
        $("#startdate").datepicker();
    });
    $(function () {
        $("#enddate").datepicker();
    });
