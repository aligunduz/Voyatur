@model DataAccessLayer.entities.Users

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    


    <div class="site-section" style="background-image: url('../images/AddBackground.png');background-repeat:no-repeat;background-size:cover">
        <div class="container">
            <div class="row">
                <div class="col-md-6 form-group">
                    @Html.Label("Kullanıcı Adı", htmlAttributes: new { @class = "formfont" })
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    @Html.Label("İsim", htmlAttributes: new { @class = "formfont" })
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    @Html.Label("Soyisim", htmlAttributes: new { @class = "formfont" })
                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    @Html.Label("Şifre", htmlAttributes: new { @class = "formfont" })
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-lg",type="password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">

                    @Html.Label("E-Mail", htmlAttributes: new { @class = "formfont" })
                    @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                    @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })

                </div>

            </div>


            <div class="row">
                <div class="col-12">
                    <input type="submit" value="Kayıt Ol" class="btn btn-primary rounded-0 px-3 px-5" />
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
